// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  coupons   Coupon[]
}

model Coupon {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  code       String   @unique
  discount   Float
  expires_at DateTime
  user_id    String?  @db.ObjectId
  user       User?    @relation(fields: [user_id], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  filename  String   @unique
  path      String
  fileType  FileType @default(IMAGE)
  size      Int? // file size in bytes
  duration  Int? // duration in seconds (for videos)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FrameType {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String          @unique // ví dụ: "1 tấm", "1x2", "2x3", "2x2"
  description String? // mô tả chi tiết frame
  image       String? // đường dẫn đến ảnh tượng trưng cho loại frame
  columns     Int // số cột ảnh
  rows        Int // số hàng ảnh
  totalImages Int // tổng số ảnh trong frame
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  templates   FrameTemplate[] // quan hệ với FrameTemplate
}

model FrameTemplate {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String // tên template
  filename    String    @unique
  path        String // đường dẫn đến file template
  preview     String? // đường dẫn ảnh preview
  frameTypeId String    @db.ObjectId
  frameType   FrameType @relation(fields: [frameTypeId], references: [id], onDelete: Cascade)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum FileType {
  IMAGE
  GIF
  VIDEO
}

enum Role {
  ADMIN
  KETOAN
  USER
}
